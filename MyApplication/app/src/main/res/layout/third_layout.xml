<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#616161">

    <TextView
        android:text="The Shawshank Redemption\n(1994)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/ic_bookmark_border_black_18dp"
        android:id="@+id/imageView6"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@+id/textView15"
        app:layout_constraintBottom_toBottomOf="@+id/textView15"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="R Crime | Drama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textColor="#ffffff" />

    <TextView
        android:text="2 hrs 22 mins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        android:textColor="#ffffff" />

    <TextView
        android:text="Two imprisoned men bond over a number of years, finding solace and eventual redemption through acts of common decency."
        android:layout_height="wrap_content"
        android:id="@+id/textView18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        android:layout_width="0dp"
        android:textSize="17sp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColor="#ffffff" />

    <ImageView
        app:srcCompat="@android:color/holo_red_dark"
        android:id="@+id/imageView7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_width="150dp"
        android:layout_height="240dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:textSize="18sp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@android:drawable/btn_star"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView7"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <TextView
        android:text="Rate this"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        android:textColor="#ffffff" />

    <RatingBar
        android:layout_width="48dp"
        android:layout_height="57dp"
        android:id="@+id/ratingBar"
        android:numStars="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintRight_toRightOf="@+id/button3"
        app:layout_constraintLeft_toLeftOf="@+id/button3"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar" />

    <TextView
        android:text="9.3/10\n1.7m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        app:layout_constraintTop_toTopOf="@+id/ratingBar"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBar"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/ratingBar"
        android:layout_marginLeft="8dp"
        android:textColor="#ffffff" />

    <TextView
        android:text="Metascore\n20 critic reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        app:layout_constraintLeft_toLeftOf="@+id/ratingBar"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        app:layout_constraintBottom_toTopOf="@+id/textView22"
        android:layout_marginBottom="8dp"
        android:textColor="#ffffff" />

    <TextView
        android:text="Oscar Nominated\n19 More Wins\n30 Nominations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView22"
        app:layout_constraintLeft_toLeftOf="@+id/textView21"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        android:textColor="#ffffff" />

</android.support.constraint.ConstraintLayout>