<?xml version="1.0" encoding="utf-8"?>
<!--Sync (Reddit app) comment section-->
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <android.support.design.widget.FloatingActionButton
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:backgroundTint="@android:color/holo_orange_light"
        app:srcCompat="@drawable/ic_reply_black_18dp"
        app:elevation="4dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:tint="@android:color/white" />

    <ImageView
        android:layout_height="172dp"
        app:srcCompat="@android:color/holo_blue_light"
        android:id="@+id/imageView2"
        android:layout_width="408dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="Title of post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="Username - Time of post - location - source - info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:text="####points\n###comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView6"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <RadioButton
        android:layout_width="18dp"
        android:id="@+id/radioButton"
        android:layout_height="18dp"
        android:button="@android:drawable/arrow_up_float"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:buttonTint="@android:color/darker_gray"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <RadioButton
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/radioButton2"
        android:button="@android:drawable/arrow_down_float"
        app:layout_constraintBottom_toBottomOf="@+id/radioButton"
        app:layout_constraintLeft_toRightOf="@+id/radioButton"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:buttonTint="@android:color/darker_gray" />

    <ImageButton
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/ic_grade_black_18dp"
        android:id="@+id/imageButton3"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/radioButton2"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/radioButton2"
        android:layout_marginLeft="24dp"
        android:tint="@android:color/darker_gray"
        app:layout_constraintRight_toLeftOf="@+id/imageButton4"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <ImageButton
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/ic_more_vert_black_18dp"
        android:id="@+id/imageButton4"
        android:background="@android:color/transparent"
        android:tint="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton3"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="260dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="260dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="286dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="286dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:text="Username #### points # hours agoi"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="10sp"
        android:textStyle="normal|bold"
        android:layout_width="411dp"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintRight_toRightOf="@+id/textView2" />

    <TextView
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="12sp"
        android:padding="4dp"
        app:layout_constraintRight_toRightOf="@+id/textView9"
        app:layout_constraintLeft_toLeftOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <ImageView
        app:srcCompat="@android:color/holo_blue_dark"
        android:id="@+id/imageView"
        android:layout_width="4dp"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_height="30dp" />

    <TextView
        android:text="Username #### points # hours ago"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:textSize="10sp"
        android:textStyle="normal|bold"
        app:layout_constraintHorizontal_bias="1.0">

        </TextView>

    <TextView
        android:text="Incididunt ut labore et dolore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        android:textSize="12sp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:padding="4dp" />

    <ImageView
        app:srcCompat="?attr/colorButtonNormal"
        android:id="@+id/imageView3"
        android:layout_width="411dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        app:srcCompat="@android:color/holo_purple"
        android:id="@+id/imageView5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_width="4dp"
        android:layout_height="150dp" />

    <TextView
        android:text="Username #### points # hours ago"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:textSize="10sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="This is going to be a very long sample text because this comment is very long and I also forgot to mention that it will be a really horrible case of a run on sentence because sometimes you just don't want to use the standard lorem ipsum text filler and decide to go another route instead and yes this other route I am talking about is aimlessly typing a really long run on sentence that doesn't serve any purpose other than to take up some space so now that I think of it, I probably would have been better off just going with lorem ipsum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        android:textSize="12sp"
        android:padding="4dp" />

</android.support.constraint.ConstraintLayout>